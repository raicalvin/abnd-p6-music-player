<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_bg_red_gradient"
    android:paddingTop="36dp">

    <ImageView
        android:id="@+id/album_cover_playing"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1.3"
        android:scaleType="centerInside"
        android:src="@drawable/cover_stars_dance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/store_listing_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Back To You"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/store_listing_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Selena Gomez"
            android:textColor="#fff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:gravity="center_horizontal|center_vertical"
            android:padding="12dp"
            android:text="PREVIEW"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/button_background"
            android:gravity="center_horizontal|center_vertical"
            android:padding="12dp"
            android:text="BUY $0.99"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>