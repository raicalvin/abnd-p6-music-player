<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="36dp">

    <ImageView
        android:id="@+id/album_cover_playing"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:scaleType="centerInside"
        android:src="@drawable/cover_stars_dance"
        android:layout_marginBottom="16dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Back To You"
            android:id="@+id/song_title_text_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selena Gomez"
            android:id="@+id/artist_name_text_view"
            android:layout_below="@id/song_title_text_view"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_shuffle_black_24dp"
            android:layout_alignParentRight="true"
            android:id="@+id/icon_shopping_bag"
            android:layout_marginLeft="16dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_repeat_black_24dp"
            android:layout_toLeftOf="@id/icon_shopping_bag"
            android:id="@+id/icon_repeat"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_shop_black_24dp"
            android:layout_toLeftOf="@id/icon_repeat"
            android:id="@+id/icon_shuffle"/>



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/media_controls_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_previous_black_24dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_fast_rewind_black_24dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:src="@drawable/ic_play_arrow_black_24dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_fast_forward_black_24dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_next_black_24dp" />

    </LinearLayout>

</LinearLayout>